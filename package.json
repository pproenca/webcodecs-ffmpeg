{
  "name": "ffmpeg-prebuilds",
  "version": "8.0.0",
  "description": "FFmpeg static binaries and development libraries for Node.js",
  "type": "module",
  "scripts": {
    "build:darwin-arm64": "build/orchestrator.sh darwin-arm64",
    "build:darwin-x64": "build/orchestrator.sh darwin-x64",
    "build:darwin": "build/orchestrator.sh darwin-x64 && build/orchestrator.sh darwin-arm64 && build/create-universal.sh",
    "build:linux-x64-glibc": "build/orchestrator.sh linux-x64-glibc",
    "build:linux-x64-musl": "build/orchestrator.sh linux-x64-musl",
    "build:windows-x64": "build/orchestrator.sh windows-x64",
    "verify": "tsx scripts/verify-build.ts",
    "package": "tsx scripts/package-npm.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pproenca/ffmpeg-prebuilds"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "audio",
    "encoding",
    "decoding",
    "webcodecs",
    "static",
    "prebuilt",
    "binary"
  ],
  "author": "Pedro Proenca",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/pproenca/ffmpeg-prebuilds/issues"
  },
  "homepage": "https://github.com/pproenca/ffmpeg-prebuilds#readme",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
